	<Frame name="RecipientTradeItemTemplate" inherits="TradeItemTemplate" virtual="true">
		<Frames>
			<Button name="$parentItemButton" inherits="ItemButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						this:SetFrameLevel(this:GetFrameLevel() + 2);
					</OnLoad>
					<OnClick>
						if ( IsControlKeyDown() ) then
							DressUpItemLink(GetTradeTargetItemLink(this:GetParent():GetID()));
						elseif ( IsShiftKeyDown() ) then
							if ( ChatFrameEditBox:IsVisible() ) then
								ChatFrameEditBox:Insert(GetTradeTargetItemLink(this:GetParent():GetID()));
							end
						else
							ClickTargetTradeButton(this:GetParent():GetID());
						end
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT");
						GameTooltip:SetTradeTargetItem(this:GetParent():GetID());
						CursorUpdate();
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
						ResetCursor();
					</OnLeave>
					<OnUpdate>
						CursorOnUpdate();
					</OnUpdate>
				</Scripts>
			</Button>
		</Frames>
	</Frame>
	<Frame name="PlayerTradeItemTemplate" inherits="TradeItemTemplate" virtual="true">
		<Frames>
			<Button name="$parentItemButton" inherits="ItemButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent"/>
				</Anchors>
				<Scripts>
					<OnClick>
						if ( IsControlKeyDown() ) then
							DressUpItemLink(GetTradePlayerItemLink(this:GetParent():GetID()));
						elseif ( IsShiftKeyDown() ) then
							if ( ChatFrameEditBox:IsVisible() ) then
								ChatFrameEditBox:Insert(GetTradePlayerItemLink(this:GetParent():GetID()));
							end
						else
							ClickTradeButton(this:GetParent():GetID());
						end
					</OnClick>
					<OnDragStart>
						ClickTradeButton(this:GetParent():GetID());
					</OnDragStart>
					<OnReceiveDrag>
						ClickTradeButton(this:GetParent():GetID());
					</OnReceiveDrag>
					<OnLoad>
						this:RegisterForDrag("LeftButton");
						this:SetFrameLevel(this:GetFrameLevel() + 2);
					</OnLoad>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT");
						GameTooltip:SetTradePlayerItem(this:GetParent():GetID());
						CursorUpdate();
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
						ResetCursor();
					</OnLeave>
					<OnUpdate>
						CursorOnUpdate();
					</OnUpdate>
				</Scripts>
			</Button>
		</Frames>
